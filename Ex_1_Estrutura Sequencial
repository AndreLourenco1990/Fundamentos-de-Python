#Ex 1
print("Olá mundo!")

#Ex 2
numero = (input("Escreva um número: "))
print("O número inserido foi: ", numero)

#Ex 3
numero1 = int(input("Escreva um número: "))
numero2 = int(input("Escreva um segundo número: "))
soma = numero1 + numero2
print("A soma é igual a: ", soma)

#Ex 4
nota1 = float(input("Escreva a primeira nota: "))
nota2 = float(input("Escreva a segunda nota: "))
nota3 = float(input("Escreva a terceira nota: "))
nota4 = float(input("Escreva a quarta nota: "))
media = (nota1 + nota2 + nota3 + nota4) / 4
print("A média é:", media)

#Ex 5
metros = float(input("Escreva o valor em metros: "))
centimetros = metros * 100
print("O valor em centímetros é: ", centimetros)

#Ex 6
raio = float(input("Escreva o raio do círculo: "))
area = 3.1416 * (raio ** 2)
print("A área do círculo é:", area)

#Ex 7
lado = float(input("Escreva o lado do quadrado: "))
area_quadrado = lado ** 2
dobro_area = area_quadrado * 2
print("A área do quadrado é:", area_quadrado)
print("O dobro da área é:", dobro_area)

#Ex 8
ganho_por_hora = float(input("Quanto ganha por hora? "))
horas_trabalhadas = float(input("Quantas horas trabalhou este mês? "))
salario = ganho_por_hora * horas_trabalhadas
print("O salário total do mês é: ", salario)

#Ex 9
fahrenheit = float(input("Escreva a temperatura em Fahrenheit: "))
celsius = 5 * ((fahrenheit - 32) / 9)
print("A temperatura em Celsius é: ", celsius)

#Ex 10
celsius = float(input("Escreva a temperatura em Celsius: "))
fahrenheit = (celsius * 9 / 5) + 32
print("A temperatura em Fahrenheit é: ", fahrenheit)

#Ex 11
num1 = int(input("Escreva o primeiro número inteiro: "))
num2 = int(input("Escreva o segundo número inteiro: "))
num3 = float(input("Escreva um número real: "))

resultado_a = (2 * num1) * (num2 / 2)
resultado_b = (3 * num1) + num3
resultado_c = num3 ** 3

print("a) O produto do dobro do primeiro com metade do segundo é: ", resultado_a)
print("b) A soma do triplo do primeiro com o terceiro é: ", resultado_b)
print("c) O terceiro elevado ao cubo é: ", resultado_c)